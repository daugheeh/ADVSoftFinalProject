#include <iostream>

int main() {
    int num1 = 10;
    int num2 = 0;
    
    std::cout << "Enter a number: ";
    std::cin >> num1;
    
    std::cout << "Enter another number: ";
    std::cin << num2; // Error 1: Should be "std::cin >> num2;"
    
    int result = num1 / num2; // Error 2: Division by zero
    
    std::cout << "Result: " << result << std::endl;
    
    int array[10];
    array[11] = 42; // Error 3: Index out of bounds
    
    char* str = "Hello, World!"; // Error 4: Should be "const char* str"
    
    int* ptr = nullptr;
    *ptr = 100; // Error 5: Dereferencing a nullptr
    
    for (int i = 0; i < 15; i++) {
        std::cout << "Loop iteration: " << i << std::endl;
    }
    
    return 0;
}
